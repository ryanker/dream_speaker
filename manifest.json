{
  "name": "梦想小说朗读助手",
  "description": "支持大部分小说网站自动朗读功能，同时支持划词朗读选中文本功能，支持40多种语言。",
  "version": "1.0",
  "manifest_version": 2,
  "icons": {
    "256": "256.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "梦想小说朗读助手",
    "default_icon": "256.png"
  },
  "permissions": [
    "storage",
    "tts",
    "notifications",
    "contextMenus",
    "<all_urls>"
  ],
  "homepage_url": "http://www.ddmx.com",
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "MacCtrl+Shift+R"
      },
      "description": "打开设置"
    }
  }
}


